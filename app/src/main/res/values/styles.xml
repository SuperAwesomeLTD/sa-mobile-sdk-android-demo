<resources>

    <!-- extended theme -->
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
    </style>

    <!-- base theme -->
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorLightGrey</item>
        <item name="colorPrimaryDark">@color/colorRed</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <!-- ToolBar Style -->
    <style name="BigToolBarStyle">
        <item name="android:background">@color/colorLightGrey</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
    </style>
    <style name="SmallToolBarStyle" parent="Theme.AppCompat">
        <item name="android:background">@color/colorRed</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="TabBarStyle" parent="Theme.AppCompat">
        <item name="android:background">@color/colorLightGrey</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
    </style>

    <style name="LinkButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BlueButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bluebutton</item>
    </style>

</resources>
