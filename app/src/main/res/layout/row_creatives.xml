<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CreativeRoot"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/CreativeIcon"
        android:layout_margin="20dp"
        android:layout_width="80dp"
        android:src="@drawable/icon_placeholder"
        android:layout_height="80dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/CreativeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_marginEnd="12dp"
            android:text="@string/page_demo_table_row_def_title"/>
        <TextView
            android:id="@+id/CreativeFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/page_demo_table_row_def_details"/>
        <TextView
            android:id="@+id/CreativeSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
</LinearLayout>
