<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/DemoRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/DemoFormatsIcon"
        android:layout_margin="20dp"
        android:layout_width="80dp"
        android:src="@drawable/icon_placeholder"
        android:layout_height="80dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/DemoFormatsTitle"
            android:textColor="@color/colorBlack"
            android:layout_marginEnd="12dp"
            android:text="@string/page_demo_table_row_def_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/DemoFormatsDetails"
            android:text="@string/page_demo_table_row_def_details"
            android:layout_marginEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
