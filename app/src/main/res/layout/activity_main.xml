<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.main.MainActivity">

    <RelativeLayout
        android:id="@+id/MainHeader"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="177dp">

        <Button
            android:id="@+id/ChangeCompButton"
            android:onClick="startCompaniesActivity"
            android:layout_alignParentEnd="true"
            android:layout_margin="12dp"
            android:textAllCaps="false"
            android:textColor="@color/colorBlue"
            android:background="@color/colorTransparent"
            android:text="@string/page_main_change_company"
            android:layout_width="wrap_content"
            android:layout_height="26dp" />

        <ImageView
            android:id="@+id/MainLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_below="@+id/ChangeCompButton"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:src="@drawable/awesomeads"/>

        <EditText
            android:id="@+id/AppsPlacementSearch"
            android:layout_below="@+id/MainLogo"
            android:layout_margin="20dp"
            android:textColorHint="@color/colorDarkGrey"
            android:layout_width="match_parent"
            android:hint="@string/page_main_search_placeholder"
            android:inputType="text"
            android:layout_height="40dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/AppAndPlacementsListView"
        android:layout_below="@+id/MainHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:dividerHeight="0dp"
        android:divider="@null"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</RelativeLayout>
